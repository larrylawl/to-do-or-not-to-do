<section id=<%= task.id%>>
	<section class="checkbox">
		<%= form_with model: task do |form|%>
			<%= form.check_box :completed %>
		<% end %>
	</section>
	<%= task.id %>
	<%= task.title %>
	<%= raw(task.tag_list.map{|t| link_to("#{t}", tag_path(t), remote: true)}.join(", ")) %>
	<% if task.details != "" %>
		<%= link_to("Show", task_path(task), remote: true)%>
	<% end %> 
	<%= link_to("Edit", edit_task_path(task), remote: true)%>
	<%= link_to("Delete", task_path(task), method: :delete, remote: true) %> <br>
	<section class= "details">
		<%= task.details %>
	</section>
</section>

