// Only fades in delete button when edit counter is zero (ie all tasks are out of edit mode) 
// Circumvent bug of deleting checked task which is in edit mode.

edit_counter++;

const task_id = <%= @task.id %>;
const form_selector = `form[action*= ${task_id}]`;
$(`#${task_id}`).replaceWith("<%= j render partial: 'form', locals: {task: @task} %>");
$(get_title_selector(form_selector)).focus();
submit_on_enter_form(form_selector);
$(`#delete`).fadeOut();


