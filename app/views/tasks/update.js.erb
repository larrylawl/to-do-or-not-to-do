// Only fades in delete button when edit counter is zero (ie all tasks are out of edit mode) 
// Circumvent bug of deleting checked task which is in edit mode.
edit_counter--;

const task_id = <%= @task.id %>;
$(`form[action*=${task_id}]`).replaceWith("<%= j render partial:'task', locals: {task: @task}%>");
$(`#${task_id} .details`).hide();
submit_on_click(`#${task_id} input[type=checkbox]`);

if (edit_counter === 0) { 
	$(`#delete`).fadeIn();
}