const task_id = <%= @task.id %>;

// Update on task
$(`#${task_id}`).replaceWith("<%= j render partial:'task', locals: {task: @task}%>");
$(`#${task_id} .details`).hide();

// Checkbox
submit_on_click(`#${task_id} input[type=checkbox]`);

// Update on form
$(`#form`).replaceWith("<%= j render partial: 'form', locals: {task: Task.new} %>");
reset_form("#form");
submit_on_enter_form("#form");

// Delete button
$(`#delete`).fadeIn(350);


